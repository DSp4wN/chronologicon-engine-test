{
  "name": "chronologicon-engine",
  "version": "1.0.0",
  "description": "Chronologicon Engine - Historical event timeline reconstruction service by ArchaeoData Inc.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "db:setup": "psql -U postgres -f db/schema.sql",
    "test": "jest --verbose",
    "lint": "eslint src/ tests/"
  },
  "keywords": [
    "historical",
    "timeline",
    "events",
    "chronologicon"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**"
    ]
  },
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "joi": "^18.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "pg": "^8.18.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "eslint": "^10.0.0",
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  }
}
